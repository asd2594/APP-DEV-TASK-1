<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8A2387"
    android:backgroundTint="#f27121"
    android:backgroundTintMode="add"
    tools:context=".WORDJUMBLE1">


    <TextView
        android:id="@+id/GREETING"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="104dp"
        android:capitalize="words"
        android:text="WORD JUMBLE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#1565c0"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="116dp"
        android:shadowColor="#c31432"
        android:text="START >>"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#c31432"
        app:strokeColor="#c31432" />

    <TextView
        android:id="@+id/WORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="256dp"
        android:text="WORD:"
        android:textColor="#c31432"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ENTERWORD"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="36dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="ENTER THE WORD (CAPS)"
        android:inputType="text|textCapCharacters"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CLUE"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginEnd="236dp"
        android:text="CLUE:"
        android:textColor="#c31432"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <EditText
        android:id="@+id/ENTERCLUE"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="220dp"
        android:ems="10"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="ENTER THE CLUE (CAPS)"
        android:inputType="text|textCapCharacters"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>